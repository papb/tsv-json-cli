{
	"name": "tsv-json-cli",
	"version": "1.0.0",
	"description": "Convert between TSV and JSON (`string[][]`)",
	"license": "MIT",
	"repository": "papb/tsv-json-cli",
	"bin": {
		"tsv2json": "./dist/source/tsv2json.js",
		"json2tsv": "./dist/source/json2tsv.js"
	},
	"author": {
		"name": "Pedro Augusto de Paula Barbosa",
		"email": "papb1996@gmail.com"
	},
	"engines": {
		"node": ">=10"
	},
	"keywords": [
		"tsv",
		"json",
		"string",
		"table",
		"matrix",
		"convert",
		"excel",
		"cli"
	],
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"release": "npm run build && np --no-yarn --no-2fa --no-cleanup",
		"test": "npm run build && xo && ava",
		"lint": "tsc --noEmit && xo",
		"ava": "npm run build && ava"
	},
	"main": "dist/source",
	"types": "dist/source",
	"files": [
		"dist/source",
		"!*.map"
	],
	"dependencies": {
		"chalk": "^4.1.0",
		"ensure-error": "^3.0.1",
		"fs-jetpack": "^3.2.0",
		"meow": "^7.1.1",
		"tsv-json": "^2.0.0"
	},
	"devDependencies": {
		"@ava/typescript": "^1.1.1",
		"@types/node": "^10.17.40",
		"ava": "^3.13.0",
		"del-cli": "^3.0.1",
		"execa": "^4.0.2",
		"get-bin-path": "^5.1.0",
		"np": "^6.5.0",
		"source-map-support": "^0.5.19",
		"tempy": "0.5.0",
		"typescript": "~4.0.3",
		"xo": "^0.34.1"
	},
	"ava": {
		"verbose": true,
		"require": [
			"source-map-support/register"
		],
		"typescript": {
			"rewritePaths": {
				"source/": "dist/source/",
				"test/": "dist/test/"
			}
		}
	},
	"xo": {
		"rules": {
			"unicorn/no-process-exit": "off",
			"no-lonely-if": "off",
			"curly": "off",
			"linebreak-style": [
				"error",
				"unix"
			],
			"object-curly-spacing": [
				"error",
				"always"
			]
		},
		"overrides": [
			{
				"files": "**/*.ts",
				"rules": {
					"@typescript-eslint/no-explicit-any": "error"
				}
			}
		]
	}
}
